{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe
{% endblock %}

{% block body %}
	{% for flashError in app.flashes('reset_password_error') %}
		<div class="alert alert-danger" role="alert">{{ flashError }}</div>
	{% endfor %}
	<section class="page-section">
		<div class="card-layout col-lg-4 col-md-10 container py-5 mt-5">
			<div class="text-center">
				<h3 class="section-heading text-uppercase">Réinitialisez votre mot de passe</h3>
			</div>
			<div class="container mx-auto"> {{ form_start(requestForm) }} {{ form_row(requestForm.email) }}
				<div>
					<small>
						Nous vous enverrons un lien pour réinitialiser votre mot de passe.
					</small>
				</div>

				<button class="btn col-12 btn-primary text-uppercase mt-3">Envoyer un e-mail de réinitialisation de mot de passe</button> {{ form_end(requestForm) }}
			</div>
		</div>
	</section>
{% endblock %}
