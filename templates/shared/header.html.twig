<!-- Navbar -->
<div class="container fixed-top">
    <nav class="navbar navbar-expand-lg navbar-light bg-light row">
        <a class="navbar-brand" href="{{ path('home') }}">SnowTricks</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                </li>
                {% if app.user %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('trick_create') }}">Créer un Trick</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" id="accountDropdownLink" aria-haspopup="true" aria-expanded="false">
                        <img src="{{ asset(app.user.imagePath ~ '/' ~ app.user.imageName) }}" class="avatar avatar-mini" alt="Avatar de {{ app.user.username }}">
                        {{ app.user.username}}
                    </a>

                    <div class="btn dropdown-menu dropdown-menu-right" aria-labelledby="accountDropdownLink">
                        <a class="dropdown-item" href="{{ path('account_profile') }}">Mon compte</a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" href="{{ path('account_logout') }}">Déconnexion</a>
                    </div>
                </li>
                {% else %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('account_registration') }}">Inscription</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('account_login') }}">Connexion</a>
                </li>
                {% endif %}
            </ul>
        </div>
    </nav>
</div>