{% extends "base.html.twig" %}

{% block title %}SnowTricks - Créer un trick
{% endblock %}

{% form_theme formCategory 'bootstrap_4_layout.html.twig' %}

{% block body %}
	<div class="container py-5 mt-5">
		<div class="text-center">
			{% if editMode %}
				<h2 class="section-heading text-uppercase">Modification de la catégorie !</h2>
			{% else %}
				<h2 class="section-heading text-uppercase">Création d'une catégorie !</h2>
			{% endif %}
		</div>
		<div class="container col-lg-7 col-md-10 mx-auto"> {{ form_start(formCategory) }} {{ form_row(formCategory.title) }} {{ form_row(formCategory.description) }}

			<button type="submit" class="btn btn-lg col-12 btn-primary btn-xl text-uppercase mt-2" id="create-category">
				{% if editMode %}
					Enregistrer les modifications
				{% else %}
					Ajouter la catégorie
				{% endif %}
			</button> {{ form_end(formCategory) }}
		</div>
	</div>
</section>{% endblock %}
