{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<section class="page-section">
		<div class="card-layout col-lg-3 col-md-10 container py-5 mt-5">
			<div class="text-center">
				<h2 class="section-heading text-uppercase">S’identifier</h2>
				<h3 class="section-subheading">Entrer dans notre communauté</h3>
			</div>
			<div class="container mx-auto">
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							Vous êtes connecté en tant que {{ app.user.username }},
							<a href="{{ path('app_logout') }}">Se déconnecter</a>
						</div>
					{% endif %}

					<label for="inputUsername">Username</label>
					<input
					type="text" value="{{ last_username }}" name="_username" id="inputUsername" class="form-control" placeholder="Username" autocomplete="username" required autofocus>
					{# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality. See https://symfony.com/doc/current/security/remember_me.html #}

					<div class="checkbox mb-3">
						<small>
							<input type="checkbox" name="_remember_me">
							Se souvenir de moi
						</small>
					</div>
					<label for="inputPassword">Password</label>
					<input type="password" name="_password" id="inputPassword" class="form-control" placeholder="Mot de passe" autocomplete="current-password" required>

					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


					<div class="mt-3">
						<a class="text-danger" href="{{ path('app_forgot_password_request') }}">Mot de passe oublié?</a>
					</div>

					<button class="btn btn-lg col-12 btn-primary btn-xl text-uppercase mt-3" type="submit">
						S'identifier
					</button>
				</form>
			</div>
		</div>
		<div class="text-center mt-3 col-lg-3 col-md-10 container">
			Nouveau sur SnowTricks?
			<a class="text-dark" href="{{ path('app_register') }}">S'inscrire</a>
		</div>
	</section>
{% endblock %}
