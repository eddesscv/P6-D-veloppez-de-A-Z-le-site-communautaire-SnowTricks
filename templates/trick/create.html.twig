{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Créer un trick
{% endblock %}

{% form_theme form 'shared/_collection.html.twig' %}

{% block body %}
	<div class="col-lg-7 col-md-10 mx-auto">
		<h1>Créer un nouveau trick</h1> {{ form_start(form) }} {{ form_row(form.title) }} {{ form_row(form.description) }} {{ form_row(form.category) }}
		<p>
			<a href="{{ path('category_create') }}">Ajouter une nouvelle catégorie</a>
		</p>

		<div class="form-group"> {{ form_label(form.mainImage) }}
			<div class="row">
				<div class="col-sm-6"> {{ form_errors(form.mainImage.file) }} {{ form_widget(form.mainImage.file) }} {{ form_help(form.mainImage.file) }}
				</div>
				<div class="col-sm-6"> {{ form_errors(form.mainImage.alt) }} {{ form_widget(form.mainImage.alt) }} {{ form_help(form.mainImage.alt) }}
				</div>
			</div>
		</div> {{ form_row(form.images) }} {{ form_row(form.videos) }}

		<button type="submit" class="btn btn-success btn-lg col-12">
			<i class="fas fa-check"></i>
			Créer le nouveau trick !</button> {{ form_end(form) }}
	</div>
{% endblock %}

{% block javascripts %} {{ parent() }} {{ encore_entry_script_tags('trick-form') }}
{% endblock %}
