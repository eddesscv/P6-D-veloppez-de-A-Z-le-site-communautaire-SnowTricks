{% extends 'base.html.twig' %} {% block title %}SnowTricks - Editer un trick{% endblock %} {% block body %}
<div class="col-lg-7 col-md-10 mx-auto">
    <h1>Modifier le trick : {{ trick.title }}</h1>
    {{ form_start(form) }} {{ form_row(form.title) }} {{ form_row(form.description) }} {{ form_row(form.category) }}

    <div class="form-group">
        {{ form_label(form.mainImage) }}
        <div class="row">
            <div class="col-sm-6">
                {{ form_errors(form.mainImage.file) }} {{ form_widget(form.mainImage.file) }} {{ form_help(form.mainImage.file) }}
            </div>
            <div class="col-sm-6">
                {{ form_errors(form.mainImage.alt) }} {{ form_widget(form.mainImage.alt) }} {{ form_help(form.mainImage.alt) }}
            </div>
        </div>
    </div>

    {{ form_row(form.images) }} {{ form_row(form.videos) }}

    <button type="submit" class="btn btn-success btn-lg col-12"><i class="fas fa-check"></i> Enregistrer les
        modifications </button> {{ form_end(form) }}
</div>
{% endblock %} {% block javascripts %} {{ parent() }} {{ encore_entry_script_tags('trick-form') }} {% endblock %}