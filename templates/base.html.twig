// } else {
//    $('.navbar-default').removeClass('navbar-shrink');
// }
// Method 2: Using toggleClass
$(".navbar").toggleClass("navbar-shrink", $(this).scrollTop() > 20)
});
});
			</script> {{ encore_entry_script_tags('app') }}
		{% endblock %}
	</body>
</html>
